<%= gmaps({
    "map_options" => { "center_longitude" => 180, "zoom" => 3, "auto_adjust" => true},
     "direction"   => { "data"    => { "from" => @trip.start_location.address, "to" => @trip.end_location.address} ,
                        "options" => {"travelMode" => "DRIVING", "display_panel" => true, "panel_id" => "instructions"}
 }
    })
